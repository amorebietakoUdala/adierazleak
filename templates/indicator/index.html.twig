{% extends 'base.html.twig' %}

{% block title %}{{'title.indicatorIndex' | trans }}{% endblock %}

{% block body %}
    <h3>{{'title.indicatorIndex' | trans }}</h3>
      <div {{ stimulus_controller('reload-content', 
               { 'url': path('indicator_index', { 'ajax' : 'true'}),
                  'locale': app.request.locale|split('_')[0] })}} data-action="entity:success->reload-content#refreshContent entity:init->reload-content#refreshContent">

         <div {{ stimulus_controller('entity', 
                  { 'locale': app.request.locale|split('_')[0], 
                  'entitySaveUrl': path('indicator_save'),
                  })}} 
               class="container-fluid">
               <div data-reload-content-target="content">
                  {{ include('indicator/_list.html.twig', { 'indicators': indicators }) }}
               </div>
            {{ include('common/_modal.html.twig', {
                  'modalTitle': 'modal.title.indicator' | trans,
                  'formTemplate': 'indicator/_form.html.twig'
               }) 
            }}
            <div class="float-right"><btn class="btn btn-primary rounded-circle" data-action="click->entity#openModal"><i class="fa fa-plus" title='{{ "btn.new" | trans | capitalize }}'></i></btn></div>
            {{ include('common/_alert.html.twig') }}
         </div>
   </div>
{% endblock %}
