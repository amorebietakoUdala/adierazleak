{% extends 'base.html.twig' %}

{% block title %}{{ 'title.observationsByIndicator' | trans }}{% endblock %}

{% block body %}
      <h3>{{ app.request.locale == 'es' ? indicator.descriptionEs : indicator.descriptionEu }}</h3>
      <div {{ stimulus_controller('reload-content', 
               { 'url': path('observation_search', { 'ajax' : 'true', 'indicator': indicator.id }),
                  'locale': app.request.locale|split('_')[0] })}} data-action="entity:success->reload-content#refreshContent entity:init->reload-content#refreshContent">

         <div {{ stimulus_controller('entity', 
                  { 'locale': app.request.locale|split('_')[0], 
                  'entitySaveUrl': path('observation_save'),
                  })}} 
               class="container-fluid">
               <div data-reload-content-target="content">
                  {{ include('observation/_list.html.twig', { 'observations': observations }) }}
               </div>
                {{ include('common/_modal.html.twig', {
                    'modalTitle': 'modal.title.observation' | trans,
                    'formTemplate': 'observation/_form.html.twig'
                    }) 
                }}
            <div class="float-right"><btn class="btn btn-primary rounded-circle" data-action="click->entity#openModal" data-indicatorId="{{ indicator.id }}"><i class="fa fa-plus" title='{{ "btn.new" | trans | capitalize }}'></i></btn></div>
            {{ include('common/_alert.html.twig') }}
        </div>
    </div>
{% endblock %}
