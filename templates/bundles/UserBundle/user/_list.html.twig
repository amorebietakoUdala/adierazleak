{% trans_default_domain 'user_bundle' %}
<table id="taula" class="table bootstrap-table mt-3"
   data-table-target="table" 
   data-page-number="{{ page }}" 
   data-page-size="{{ pageSize }}"
   data-page-sortName="{{ sortName }}"
   data-page-sortOrder="{{ sortOrder }}"
>
   <thead>
      <tr>
         <th data-sortable="true">{{"user.id" | trans | capitalize}}</th>
         <th data-sortable="true">{{"user.username" | trans | capitalize}}</th>
         <th data-sortable="true">{{"user.firstName" | trans | capitalize}}</th>
         <th data-sortable="true">{{"user.email" | trans | capitalize}}</th>
         <th data-sortable="true">{{"user.roles" | trans | capitalize}}</th>
         <th data-sortable="true" data-field="options">{{"table.options" | trans | capitalize}}</th>
      </tr>
   </thead>
   <tbody>
      {% for user in users %}
      <tr>
         <td>{{user.id}}</td>
         <td>{{user.username}}</td>
         <td>{{user.firstName}}</td>
         <td>{{user.email}}</td>
         <td>
                  {% set rolesCount = user.roles | filter((v,k) => v != 'ROLE_USER') | length %}
                  {% if rolesCount > 0 %}
                        {% for role in user.roles | filter((v,k) => v != 'ROLE_USER') %}
                           {{ role | trans | capitalize }} 
                           {% if loop.index < rolesCount %}|{% endif %}
                        {% endfor %}
                  {% else %}
                        {{ 'ROLE_USER' | trans }}
                  {% endif %}
         </td>
         <td>
         <a href="{{ path ("admin_user_show",{'id': user.id })}}" data-return-url="{{ absolute_url(path(app.request.attributes.get('_route'))) }}" data-action="click->table#onClick"><i class="fa fa-eye"></i></a>
         &nbsp;<a href="{{ path ("admin_user_edit",{'id': user.id })}}" data-return-url="{{ absolute_url(path(app.request.attributes.get('_route'))) }}" data-action="click->table#onClick"><i class="fa fa-edit"></i></a>
         &nbsp;<a href="{{ path ('admin_user_delete',{'id': user.id })}}"
                  data-action="click->table#onClick" data-confirm="true">
                  <i class="fa fa-trash"></i>
               </a>
         </td>
      </tr>
      {% endfor %}
   </tbody>
</table>
